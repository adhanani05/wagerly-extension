{
  "name": "Wagerly",
  "version": "1.0.0",
  "description": "AI Copilot for Sports Betting",
  "manifest_version": 3,
  "author": "Aditya Dhanani",
  "permissions": ["sidePanel", "tabs", "activeTab", "scripting", "storage"],
  "host_permissions": [
    "https://sports.nj.betmgm.com/en/sports/events/*",
    "https://sportsbook.draftkings.com/event/*"
  ],
  "action": {
    "default_title": "Click to open panel"
  },
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "main-sp.html"
  },
  "icons": {
    "16": "icons/W-16.png",
    "48": "icons/W-48.png",
    "128": "icons/W-128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  }
}
